{
  "name": "@grassroots/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf .turbo dist node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --",
    "generate:graph": "source ../../.env && kysely-codegen --out-file ./src/graph-db.ts",
    "generate:index": "source ../../.env && kysely-codegen --url $INDEXER_DB_URL --out-file ./src/indexer-db.ts --dialect postgres",
    "generate": "pnpm run generate:graph && pnpm run generate:index"
  },
  "dependencies": {
    "@grassroots/auth": "workspace:*",
    "@grassroots/contracts": "workspace:*",
    "@grassroots/db": "workspace:*",
    "@grassroots/shared": "workspace:*",
    "@grassroots/validators": "workspace:*",
    "@t3-oss/env-nextjs": "catalog:",
    "@trpc/server": "11.0.0-rc.441",
    "decimal.js": "^10.4.3",
    "discord.js": "^14.15.2",
    "iron-session": "^8.0.1",
    "kysely": "catalog:",
    "pg": "^8.11.5",
    "superjson": "2.2.1",
    "viem": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@grassroots/eslint-config": "workspace:*",
    "@grassroots/prettier-config": "workspace:*",
    "@grassroots/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "@types/pg": "^8.11.6",
    "dotenv-cli": "^7.4.2",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsup": "^8.2.4",
    "typescript": "catalog:"
  },
  "prettier": "@grassroots/prettier-config"
}
