{
  "name": "server",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --packages=external --platform=node --format=esm --outdir=dist --sourcemap",
    "dev": "export NODE_ENV=development && dotenv -e ../../.env -- tsx watch src/server",
    "lint": "eslint --cache --ext \".js,.ts,.tsx\" src",
    "type-check": "tsc",
    "start:server": "node --env-file ../../.env dist/index.js",
    "start": "run-p start:* --print-label",
    "test-dev": "start-server-and-test 'tsx src/server' http-get://localhost:2022 'tsx src/client'",
    "test-start": "start-server-and-test 'node dist/server' http-get://localhost:2022 'node dist/client'"
  },
  "dependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@grassroots/api": "workspace:*",
    "@grassroots/auth": "workspace:*",
    "@grassroots/contracts": "workspace:*",
    "@grassroots/db": "workspace:*",
    "@grassroots/shared": "workspace:*",
    "@grassroots/validators": "workspace:*",
    "@trpc/client": "11.0.0-rc.441",
    "@trpc/server": "11.0.0-rc.441",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "iron-session": "^8.0.1",
    "kysely": "catalog:",
    "superjson": "2.2.1",
    "tslib": "^2.5.0",
    "viem": "catalog:",
    "ws": "^8.0.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@grassroots/tsconfig": "workspace:*",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/node": "catalog:",
    "@types/ws": "^8.2.0",
    "dotenv-cli": "^7.4.2",
    "esbuild": "^0.17.10",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "start-server-and-test": "^1.12.0",
    "tsup": "^8.2.4",
    "tsx": "^4.0.0",
    "typescript": "catalog:",
    "wait-port": "^1.0.1"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
